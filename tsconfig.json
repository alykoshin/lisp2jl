{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2022"],
    "module": "commonjs",
    //    "module": "nod",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    //    "target": "es5",
    "target": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "plugins": [],
    "rootDir": "./src"
  },
  "include": ["./src/"],
  "exclude": ["dist", "example", "node_modules", "_archive"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
